@model Users

<form asp-action="EditUser" asp-controller="Account" method="put" novalidate>
    <input type="hidden" asp-for="UserId" />
    <fieldset>
        <legend class="text-info">
            <i class="fa fa-info-circle fa-fw"></i> Informaci&oacute;n
        </legend>
        <hr class="border-info mt-0" />
        <div asp-validation-summary="All" class="alert alert-danger p-1 my-2">
            <div class="media">
                <i class="fa fa-exclamation-circle fa-fw fa-2x m-1"></i>
                <div class="media-body mt-2">
                    <p class="p-0 m-0">
                        Revise la siguiente informaci&oacute;n:
                    </p>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col form-group">
                <input asp-for="UserFirstname" class="form-control" placeholder="@Html.DisplayNameFor(m=>m.UserFirstname).CapitalFirstLetter()" />
            </div>
        </div>
        <div class="form-row">
            <div class="col form-group">
                <input asp-for="UserLastname" class="form-control" placeholder="@Html.DisplayNameFor(m=>m.UserLastname).CapitalFirstLetter()" />
            </div>
        </div>
        <div class="form-row">
            <div class="col form-group">
                <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles"></select>
            </div>
        </div>
        <div class="form-row">
            <div class="col form-group">
                <div class="form-check">
                    <input type="checkbox" data-toggle="collapse" data-target="#passrow" class="form-check-input" />
                    <label class="form-check-label">Quiero cambiar la contraseña de este usuario.</label>
                </div>
            </div>
        </div>
        <div class="form-row collapse" id="passrow">
            <div class="col form-group">
                <input asp-for="UserPassword" class="form-control" placeholder="@Html.DisplayNameFor(m=>m.UserPassword).CapitalFirstLetter()" />
            </div>
        </div>
    </fieldset>
</form>
